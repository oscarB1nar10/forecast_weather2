<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/current_time_color">



    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:columnCount="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="MON"
            android:background="@drawable/current_day_style"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="TUE"
            android:textColor="@color/temperature_color"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="WED"
            android:textColor="@color/temperature_color"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="THU"
            android:textColor="@color/temperature_color"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="FRI"
            android:textColor="@color/temperature_color"
            android:gravity="center_horizontal"/>



        <ImageView
            android:id="@+id/mon-icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudy"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/current_day_style"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/tue-icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudy"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/wed-icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudy"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/thu-icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudy"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/fri-icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloudy"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center_horizontal"/>




        <TextView
            android:id="@+id/mon-degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="MON"
            android:background="@drawable/current_day_style"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tue-degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="TUE"
            android:textColor="@color/temperature_color"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/wed-degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="WED"
            android:textColor="@color/temperature_color"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/thu-degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="THU"
            android:textColor="@color/temperature_color"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/fri-degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="FRI"
            android:textColor="@color/temperature_color"
            android:gravity="center_horizontal"/>




    </GridLayout>

</LinearLayout>